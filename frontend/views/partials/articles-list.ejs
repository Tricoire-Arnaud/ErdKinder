<% if (articles && articles.length > 0) { %>
    <% articles.forEach(article => { %>
        <article class="bg-white rounded-lg shadow-lg overflow-hidden hover:-translate-y-1 transition-all duration-300">
            <% if (article.image) { %>
                <img src="/uploads/articles/<%= article.image %>" 
                     alt="<%= article.title %>"
                     class="w-full h-48 object-cover">
            <% } %>
            <div class="p-6">
                <h3 class="text-xl font-semibold text-text mb-2">
                    <%= article.title %>
                </h3>
                <p class="text-gray-600 mb-4">
                    <%= stripHtml(article.excerpt || article.content).substring(0, 150) + '...' %>
                </p>
                <div class="flex items-center justify-between">
                    <span class="text-sm text-gray-500">
                        Par <%= article.author ? article.author.name : 'Anonyme' %>
                    </span>
                    <a href="/actualites/<%= article.id %>" 
                       class="text-primary hover:text-accent">
                        Lire la suite â†’
                    </a>
                </div>
            </div>
        </article>
    <% }); %>
<% } else { %>
    <p class="text-center text-gray-500 col-span-3">
        Aucun article disponible pour le moment.
    </p>
<% } %>