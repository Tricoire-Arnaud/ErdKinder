<%- contentFor('body') %>

<main class="flex-grow">
    <div class="container mx-auto px-4 py-16">
        <div class="text-center">
            <h1 class="text-6xl font-bold text-red-600 mb-4">Erreur</h1>
            <h2 class="text-2xl font-semibold mb-4"><%= error %></h2>
