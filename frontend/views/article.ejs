<%- contentFor('body') %>

<div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
        <a href="/actualites" class="inline-flex items-center text-primary hover:text-accent mb-8">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
            </svg>
            Retour aux actualités
        </a>
        
        <article class="bg-white rounded-lg shadow-lg overflow-hidden">
            <% if (article.image) { %>
                <img src="/uploads/articles/<%= article.image %>" 
                     alt="<%= article.title %>"
                     class="w-full h-64 object-cover">
            <% } %>
            <div class="p-8">
                <h1 class="text-4xl font-bold text-text mb-4">
                    <%= article.title %>
                </h1>
                <div class="flex items-center text-sm text-gray-600 mb-8">
                    <div class="flex-shrink-0 h-8 w-8 bg-primary text-white rounded-full flex items-center justify-center mr-3">
                        <%= article.author ? article.author.name.charAt(0).toUpperCase() : '?' %>
                    </div>
                    <div>
                        <div class="font-medium"><%= article.author ? article.author.name : 'Anonyme' %></div>
                        <div>Publié le <%= formatDate(article.createdAt) %></div>
                    </div>
                </div>
                <div class="prose prose-lg max-w-none">
                    <%- article.content %>
                </div>
            </div>
        </article>
    </div>
</div>